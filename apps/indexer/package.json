{
  "name": "@repo/indexer",
  "module": "src/index.ts",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "start": "bun src/index.js",
    "dev": "bun --watch src/index.ts | pino-pretty",
    "services:start": "docker compose up -d",
    "services:stop": "docker compose down",
    "migrate:create": "bun ./src/database/migrator create",
    "migrate:types": "kanel --config=.kanelrc.cjs",
    "migrate:up": "bun ./src/database/migrator latest",
    "migrate:down": "bun ./src/database/migrator down",
    "migrate:fresh": "bun ./src/database/migrator fresh",
    "migrate": "bun run migrate:up && bun run migrate:types",
    "test": "bun test",
    "cli": "bun --watch ./src/cli/cli.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@types/bun": "^1.1.1",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.6",
    "kanel": "^3.8.8",
    "kanel-kysely": "^0.3.3",
    "pino-pretty": "^11.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@alephium/web3": "^0.39.3",
    "@auth/core": "^0.30.0",
    "@hono/auth-js": "^1.0.7",
    "@hono/swagger-ui": "^0.2.2",
    "@hono/zod-openapi": "^0.11.0",
    "atlassian-openapi": "^1.0.18",
    "bignumber.js": "^9.1.2",
    "cronstrue": "^2.50.0",
    "dataloader": "^2.2.2",
    "hono": "^4.3.2",
    "ioredis": "^5.4.1",
    "kysely": "^0.27.3",
    "limiter": "^2.1.0",
    "node-cron": "^3.0.3",
    "openapi-merge": "^1.3.2",
    "pg": "^8.11.5",
    "pino": "^9.0.0",
    "redlock": "^5.0.0-beta.2",
    "zod": "^3.23.6",
    "zx": "^8.0.2"
  }
}
